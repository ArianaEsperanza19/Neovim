{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "overrides": [
    {
      "files": "*.sh",
      "options": {
        "tabWidth": 4,
        "singleQuote": false,
        "semi": false
      }
    },
    {
      "files": "*.php",
      "options": {
        "tabWidth": 4,
        "semi": true
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "options": {
        "tabWidth": 2,
        "singleQuote": true,
        "semi": true
      }
    },
    {
      "files": ["*.c", "*.h"],
      "options": {
        "tabWidth": 4,
        "singleQuote": false,
        "semi": true
      }
    }
  ]
}
